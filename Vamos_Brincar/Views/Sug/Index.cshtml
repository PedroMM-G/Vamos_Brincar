@model IEnumerable<Vamos_Brincar.Models.SugestoesProp>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Vamos Brincar</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon.ico" />
    <!-- Font Awesome icons -->
    <script src="https://kit.fontawesome.com/bb103a8609.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <!-- Material Icons-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <!-- table sorting -->
    <script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>

</head>
<body id="page-top" scroll="no" style="overflow: hidden">

    <div class="container">
        <!--  Divider-->
        <div class="divider-custom"></div>

        <!-- Portfolio Section Heading-->
        <h1 class="page-section-heading text-center text-uppercase text-secondary mb-0">
            Consultar Sugestões</h2>

            <!--  Divider-->
            <div class="divider-custom"></div>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.id_sug)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.id_crianca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.id_inst)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.sug)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_sug)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_crianca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_inst)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sug)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id_sug }) |
                            @Html.ActionLink("Details", "Details", new { id = item.id_sug }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id_sug })
                        </td>
                    </tr>
                }

            </table>

            <!-- Navigation-->
            <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-bottom" id="mainNav">
                <div class="container">
                    <a class="navbar-brand js-scroll-trigger" href="https://localhost:44344/Home/Index_Instituicao"> <img class="img-fluid center" style="width: 250px;" src="~/images/logo-single-line.png" alt="" /></a>
                    <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                        Menu
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="https://localhost:44344/Home/Index_Instituicao">Voltar</a></li>
                            <!--<li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="settings.html">Definições</a></li>-->
                            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="https://localhost:44344/Home/Index">Terminar Sessão</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Bootstrap core JS-->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
            <!-- Third party plugin JS-->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
            <!-- Contact form JS-->
            <script src="~/assets/mail/jqBootstrapValidation.js"></script>
            <script src="~/assets/mail/contact_me.js"></script>
            <!-- Core theme JS-->
            <script src="~/js/scripts.js"></script>
</body>
</html>



